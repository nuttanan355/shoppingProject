<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminContactActivity">


    <RelativeLayout
        android:id="@+id/r44"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/home_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sukhumvitset_text"
            android:text="ติดต่อ"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r44">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/facebook"
                android:fontFamily="@font/kanit_extralight"
                android:paddingLeft="30dp"
                android:text="  Facebook"
                android:textColor="@color/colorBlack"
                android:textSize="30dp"
                android:textStyle="bold" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/contact_txt_url_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:drawableTint="@color/colorPrimaryDark"
                android:fontFamily="@font/kanit_extralight"
                android:hint="URL Facebook"
                android:singleLine="true"
                android:textColor="@color/primaryTextColor"
                android:textSize="20dp"
                android:textStyle="bold"
                app:met_floatingLabel="normal" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/line"
                android:fontFamily="@font/kanit_extralight"
                android:paddingLeft="30dp"
                android:text="  Line"
                android:textColor="@color/colorBlack"
                android:textSize="30dp"
                android:textStyle="bold" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/contact_txt_id_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:drawableTint="@color/colorPrimaryDark"
                android:fontFamily="@font/kanit_extralight"
                android:hint="ID Line"
                android:singleLine="true"
                android:textColor="@color/primaryTextColor"
                android:textSize="20dp"
                android:textStyle="bold"
                app:met_floatingLabel="normal" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/mail"
                android:fontFamily="@font/kanit_extralight"
                android:paddingLeft="30dp"
                android:text="  Mail"
                android:textColor="@color/colorBlack"
                android:textSize="30dp"
                android:textStyle="bold" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/contact_txt_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:drawableTint="@color/colorPrimaryDark"
                android:fontFamily="@font/kanit_extralight"
                android:hint="E-Mail"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/primaryTextColor"
                android:textSize="20dp"
                android:textStyle="bold"
                app:met_floatingLabel="normal" />


            <Button
                android:id="@+id/btn_save_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="50dp"
                android:background="@color/AdmincolorAccent"
                android:fontFamily="@font/sukhumvitset_text"
                android:padding="10dp"
                android:text="บันทึก"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>


    </ScrollView>


</RelativeLayout>