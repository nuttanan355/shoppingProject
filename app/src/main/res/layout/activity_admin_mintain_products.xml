<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="15dp"
    tools:context=".Admin.AdminMaintainProductsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/maintain_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="2dp" />

        <EditText
            android:id="@+id/maintain_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_image"
            android:hint="ชื่อสินค้า"
            android:textAlignment="center"
            android:textSize="18dp"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/sukhumvitset_text"
            android:background="@drawable/input_design_back"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/maintain_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_name"
            android:hint="ราคาสินค้า"
            android:textAlignment="center"
            android:textSize="18dp"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/sukhumvitset_text"
            android:background="@drawable/input_design_back"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/maintain_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_price"
            android:hint="ลักษณะสินค้า"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textSize="18dp"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/sukhumvitset_text"
            android:background="@drawable/input_design_back"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_apply_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_description"
            android:text="ยืนยันการแก้ไข"
            android:fontFamily="@font/sukhumvitset_text"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@color/AdmincolorAccent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ok"/>


        <Button
            android:id="@+id/btn_delete_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_apply_changes"
            android:text="ลบสินค้า"
            android:textAlignment="center"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/sukhumvitset_text"
            android:background="@color/colorRed"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:drawableLeft="@drawable/de"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>

