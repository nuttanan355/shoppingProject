<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginStart="15dp"
android:layout_marginTop="20dp"
android:layout_marginEnd="15dp"
android:orientation="vertical"
app:cardElevation="15dp"

    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/seller_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sukhumvitset_text"
        android:text="ชื่อสินค้า"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/seller_product_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_product_name"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/sukhumvitset_text"
        android:text="สถานะสินค้า"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        android:textStyle="bold"

        />

    <ImageView
        android:id="@+id/seller_product_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/seller_product_state"
        android:layout_marginHorizontal="20dp"
        android:cropToPadding="true"
        android:src="@drawable/select_product_image" />

    <TextView
        android:id="@+id/seller_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_product_image"
        android:fontFamily="@font/sukhumvitset_text"
        android:text="ราคาสินค้า"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/seller_product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_product_price"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/sukhumvitset_text"
        android:text="ประเภทสินค้า"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textStyle="bold"/>


</RelativeLayout>

</androidx.cardview.widget.CardView>