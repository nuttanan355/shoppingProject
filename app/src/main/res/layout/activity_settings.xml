<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/btn_close_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/kanit_extralight"
                    android:text="Close"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_security_questions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/kanit_extralight"
                    android:text="ตั้งคำถามเพื่อปลอดภัย"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar_settings">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/settings_profile_image"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/profile" />

                <TextView
                    android:id="@+id/settings_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/settings_profile_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/kanit_extralight"
                    android:text="User Name"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/settings_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/settings_user_name"
                    android:layout_margin="15dp"
                    android:fontFamily="@font/sukhumvitset_text"
                    android:hint="เบอร์โทรศัพท์....."
                    app:met_floatingLabel="normal"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/settings_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/settings_phone_number"
                    android:layout_margin="15dp"
                    android:fontFamily="@font/sukhumvitset_text"
                    android:hint="ชื่อ ....."
                    app:met_floatingLabel="normal"
                    android:padding="10dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/settings_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/settings_full_name"
                    android:layout_margin="15dp"
                    android:fontFamily="@font/sukhumvitset_text"
                    android:hint="ที่อยู่....."
                    app:met_floatingLabel="normal"
                    android:padding="10dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/settings_postal_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/settings_address"
                    android:layout_margin="15dp"
                    android:fontFamily="@font/sukhumvitset_text"
                    android:hint="รหัสไปรษณีย์....."
                    app:met_floatingLabel="normal"
                    android:maxLength="5"
                    android:padding="10dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_update_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/settings_postal_code"
                    android:layout_margin="15dp"
                    android:background="@drawable/buttons"
                    android:fontFamily="@font/sukhumvitset_text"
                    android:padding="10dp"
                    android:text="Update"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>