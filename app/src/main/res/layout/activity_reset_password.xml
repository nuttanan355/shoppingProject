<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/relative123"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:fontFamily="@font/sukhumvitset_text"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"

            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_layout_reset_pssword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="visible">

        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ccp_defaultNameCode="TH"
            android:visibility="gone"/>
        <EditText
            android:id="@+id/find_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:padding="14dp"
            android:layout_marginHorizontal="15dp"
            android:inputType="number"
            android:hint="โปรดใส่หมายเลขโทรศัพท์"
            android:maxLength="10"
            android:fontFamily="@font/sukhumvitset_text"
            android:textStyle="bold"
            />


        <Button
            android:id="@+id/btn_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/AdmincolorAccent"
            android:padding="14dp"
            android:layout_margin="30dp"
            android:layout_below="@+id/find_phone_number"
            android:text="ตกลง"
            android:fontFamily="@font/sukhumvitset_text"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            android:textSize="22dp"
            android:drawableLeft="@drawable/ok"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_layout_reset_pssword_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone">

        <EditText
            android:id="@+id/find_phone_number_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/input_design"
            android:fontFamily="@font/sukhumvitset_text"
            android:hint="กรอกข้อมูล OTP ที่นี่..."
            android:inputType="number"
            android:maxLength="10"
            android:padding="14dp"
            android:singleLine="true"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_verify_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/find_phone_number_otp"
            android:layout_margin="30dp"
            android:background="@color/AdmincolorAccent"
            android:drawableLeft="@drawable/ok"
            android:fontFamily="@font/sukhumvitset_text"
            android:padding="14dp"
            android:text="Code Sent"
            android:textColor="@android:color/background_dark"
            android:textSize="22dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_reset_pssword_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone">

        <EditText
            android:id="@+id/find_reset_pssword_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/input_design"
            android:fontFamily="@font/sukhumvitset_text"
            android:hint="รหัสผ่านใหม่."
            android:inputType="number"
            android:maxLength="10"
            android:padding="14dp"
            android:singleLine="true"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_reset_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/find_reset_pssword_input"
            android:layout_margin="30dp"
            android:background="@color/AdmincolorAccent"
            android:drawableLeft="@drawable/ok"
            android:fontFamily="@font/sukhumvitset_text"
            android:padding="14dp"
            android:text="Reset Password"
            android:textColor="@android:color/background_dark"
            android:textSize="22dp"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>