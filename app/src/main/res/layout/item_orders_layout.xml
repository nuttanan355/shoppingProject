<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:fontFamily="@font/sukhumvitset_text"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เบอร์โทรศัพท์"
            android:fontFamily="@font/sukhumvitset_text"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textSize="14dp"

            android:layout_alignParentEnd="true"
            android:textAlignment="viewEnd"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sukhumvitset_text"
            android:text="วันที่, เวลา"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@+id/order_address"
            android:gravity="left"
            android:layout_marginTop="18dp"
            />

        <TextView
            android:id="@+id/order_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sukhumvitset_text"
            android:text="ที่อยู่"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@+id/order_total_price"
            android:gravity="left"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sukhumvitset_text"
            android:text="ราคารวม"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@+id/cart_product_quantity"
            android:gravity="left"
            android:layout_marginTop="10dp"
            />







    </LinearLayout>

</LinearLayout>